{
  "name": "YouTube Distraction Free",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Remove YouTube's sourrinding countent, besides the video itself",
  "homepage_url": "http://gillchristian.xyz",
  "background": {
    "scripts": ["src/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "YouTube Distraction Free",
    "default_icon": "assets/disabled.png"
  },
  "permissions": [
    "https://www.youtube.com/*",
    "http://www.youtube.com/*",
    "https://youtube.com/*",
    "http://youtube.com/*",
    "tabs",
    "storage"
  ]
}
